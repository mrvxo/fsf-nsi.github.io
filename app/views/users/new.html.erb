<main>
  <% if @user.errors.any?%>
    <% @user.errors.full_messages.each do |message| %>
      <div id="warning"><%= message %></div>
    <% end %>
  <% end %>

  <% if flash[:danger] %>
    <%=  flash[:danger] %>
  <% end %>

  <div id="Form">
    <h1>Authentification</h1>
    <%= form_for @user do |f| %>
      <div>
        <%= f.label :username, "Pseudonyme: " %>
        <%= f.text_field :username %>
      </div>
      <div>
        <%= f.label :email, "Votre E-mail: " %>
        <%= f.email_field :email %>
      </div>
      <button type="submit">S'inscrire</button>
    <% end %>
  </div>
  <% if flash[:success] %>
    <%= flash[:success] %>
  <% end %>
</main>
